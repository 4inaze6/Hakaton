<Window x:Class="GeoPoint.GeoPointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoPoint"
        mc:Ignorable="d"
        Title="GeoPoint" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="KmlsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding FileName}" />
                            <Image Source="{Binding ImagePath}" Height="150" Width="200"/>
                        </StackPanel>
                        <Button x:Name="GE3DButton" Content="Google Earth 3D" Margin="5" Click="GE3DButton_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
